<div class="container">
  <h1>Edit Caption</h1>
  <div class="row">
    <section class="col-lg-6 poet-form">
      <form method="POST" action="/poets/<%= poet.id %>">

        <input type="hidden" name="_method" value="PUT">
        <div>
          <label for="reason">Why her work inspires me: </label>
          <textarea name="reason" id="reason" rows="6" cols="50"><%= poet.reason %></textarea>
        </div>
        <button class="btn btn-primary add-btn">Submit</button>
      </form>
    </section>
  </div>
</div>
